<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <ImageView
        android:id="@+id/out_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="31dp"
        android:layout_marginTop="17dp"
        android:background="@drawable/out" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/out_image"
        android:layout_toStartOf="@+id/imageView2"
        android:text="Approcal Member" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/out_image"
        android:layout_marginEnd="23dp"
        android:background="@drawable/member" />
    <TextView
        android:id="@+id/mp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:text="点击光芯可查看跳纤信息"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textSize="15dp" />

    <LinearLayout
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:id="@+id/optical_jumper"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/mp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/button_yi"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:background="@drawable/shape_button"
            android:textColor="#fff"
            android:text="1"/>
        <Button
            android:id="@+id/button_er"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:background="@drawable/shape_button"
            android:textColor="#fff"
            android:text="2"/>
        <Button
            android:id="@+id/button_san"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:background="@drawable/shape_button"
            android:textColor="#fff"
            android:text="3"/>
        <Button
            android:id="@+id/button_si"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:background="@drawable/shape_button"
            android:textColor="#fff"
            android:text="4"/>
        <Button
            android:id="@+id/button_wu"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:background="@drawable/shape_button"
            android:textColor="#fff"
            android:layout_height="45dp"
            android:text="5"/>
        <Button
            android:id="@+id/button_liu"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:background="@drawable/shape_button"
            android:textColor="#fff"
            android:layout_height="45dp"
            android:text="6"/>
        <Button
            android:id="@+id/button_qi"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:background="@drawable/shape_button"
            android:textColor="#fff"
            android:layout_height="45dp"
            android:text="7"/>
        <Button
            android:id="@+id/button_ba"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:background="@drawable/shape_button"
            android:textColor="#fff"
            android:layout_height="45dp"
            android:text="8"/>
        <Button
            android:id="@+id/button_jiu"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:background="@drawable/shape_button"
            android:textColor="#fff"
            android:text="9"/>
        <Button
            android:id="@+id/button_shi"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:background="@drawable/shape_button"
            android:textColor="#fff"
            android:text="10"
            android:textSize="10dp"
            />
        <Button
            android:id="@+id/button_shiyi"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:background="@drawable/shape_button"
            android:textColor="#fff"
            android:textSize="10dp"
            android:text="11"/>

        <Button
            android:id="@+id/button_shier"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:textSize="10dp"
            android:background="@drawable/shape_button"
            android:textColor="#fff"
            android:text="12"/>
        <TextView
            android:id="@+id/order_name"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text=" A"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/gjjx_name"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/optical_jumper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="光交接箱:"/>
        <TextView
            android:id="@+id/gjjxname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16dp" />
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/optical_message"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/gjjx_name"
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <TextView
            android:id="@+id/text5"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="光交接箱法兰盘:"/>
        <TextView
            android:id="@+id/flange"
            android:layout_toEndOf="@+id/text5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16dp"/>
        <TextView
            android:textSize="16dp"
            android:id="@+id/text6"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/text5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="在法兰盘的位置:"/>
        <TextView
            android:id="@+id/location"
            android:textSize="16sp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/text5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/text6"/>
        <TextView
            android:id="@+id/text7"
            android:layout_marginTop="9dp"
            android:textSize="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text6"
            android:text="RFID:"/>

        <EditText
            android:id="@+id/rfid_id"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_alignBaseline="@+id/text7"
            android:layout_alignBottom="@+id/text7"
            android:layout_marginStart="14dp"
            android:layout_toEndOf="@+id/text7"
            android:background="@drawable/editsharp"
            android:singleLine="true"
            android:textSize="16dp"
            android:hint="请输入36位字符的RFID码"
            />

        <Button
            android:text="保存RFID"
            android:id="@+id/save_rfid"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignBaseline="@+id/rfid_id"
            android:layout_alignBottom="@+id/rfid_id"
            android:layout_alignParentEnd="true"
            android:background="@drawable/buttonsharp"
            android:textColor="#FF2541DE"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/jump_messagess"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="跳纤信息："
        android:layout_below="@+id/optical_message"
        />
    <ListView
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:id="@+id/jump_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/jump_messagess"
        android:layout_marginTop="10dp">
    </ListView>

</RelativeLayout>