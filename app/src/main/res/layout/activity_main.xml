<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/background"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:text="标识平台用户注册 "
        android:textColor="#FFC2F1E6"
        android:textSize="30dp"
        android:id="@+id/mp" />

    <TextView
        android:id="@+id/job"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/account_number"
        android:layout_below="@+id/mp"
        android:layout_marginTop="12dp"
        android:text="公司:"
        android:textColor="#FFC2F1E6"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/orgname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/phone_number"
        android:layout_alignTop="@+id/job"
        android:layout_toEndOf="@+id/job"
        android:background="@drawable/editsharp"
        android:hint="请输入公司名"
        android:singleLine="true" />

    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/account_number"
        android:layout_below="@+id/job"
        android:layout_marginTop="20dp"
        android:text="姓名:"
        android:textColor="#FFC2F1E6"
        android:textSize="20dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/phone_number"
        android:layout_alignTop="@+id/username"
        android:layout_toEndOf="@+id/username"
        android:background="@drawable/editsharp"
        android:hint="请输入姓名"
        android:singleLine="true"
        android:id="@+id/user_name" />

    <TextView
        android:id="@+id/account_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_name"
        android:layout_toStartOf="@+id/phone_number"
        android:layout_marginTop="15dp"
        android:text="账号:"
        android:textColor="#FFC2F1E6"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/phone_number"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/account_number"
        android:layout_alignBottom="@+id/account_number"
        android:layout_alignEnd="@+id/mp"
        android:background="@drawable/editsharp"
        android:hint="请输入手机号"
        android:singleLine="true" />

    <TextView
        android:id="@+id/psd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phone_number"
        android:layout_marginTop="13dp"
        android:layout_toStartOf="@+id/user_number"
        android:text="密码:"
        android:textColor="#FFC2F1E6"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/user_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/mp"
        android:layout_alignStart="@+id/phone_number"
        android:layout_alignTop="@+id/psd"
        android:background="@drawable/editsharp"
        android:hint="密码为6~16位字符"
        android:singleLine="true" />


    <TextView
        android:id="@+id/send_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="24dp"
        android:layout_toStartOf="@+id/mp"
        android:autoLink="all"
        android:text="取消"
        android:textSize="16dp"
        android:textColor="#1d27af"/>

    <TextView
        android:id="@+id/send_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/send_cancel"
        android:layout_alignBottom="@+id/send_cancel"
        android:layout_toEndOf="@+id/phone_number"
        android:autoLink="all"
        android:text="注册"
        android:textSize="16dp"
        android:textColor="#1d27af" />

    <Button
        android:id="@+id/button_send_verification_code"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignEnd="@+id/user_number"
        android:layout_alignTop="@+id/verification_code"
        android:background="@drawable/buttonsharp"
        android:text="获取验证码"
        android:textColor="#FF2541DE"
        android:textSize="11dp" />


    <EditText
        android:id="@+id/verification_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_number"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="27dp"
        android:layout_toStartOf="@+id/button_send_verification_code"
        android:background="@drawable/editsharp"
        android:hint="请输入验证码"
        android:singleLine="true" />


</RelativeLayout>
